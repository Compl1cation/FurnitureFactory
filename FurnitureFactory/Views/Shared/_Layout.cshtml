<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
    @Scripts.Render("~/bundles/MyScripts")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>   
    <script src="/signalr/hubs" type="text/javascript"></script>
  
    <meta name="description" content="List of offered Furniture" />
</head>
<body onload="PopulateCart()">
    <div id="wrapper">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Furniture Store", "Index", "BrowseFurniture", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Manager Products", "Index", "FurnitureManager")</li>
                    <li>@Html.ActionLink("Manage Users", "Index", "UserManager")</li>
                    <li>@Html.ActionLink("Manage Orders", "Index", "OrdersManager")</li>
                    <li style="color:white; font-size:10px">
                        User: admin, Passowrd: 123123
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
        </div>
        <footer>
            <p class="whiteTrebouchet center">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
</body>
</html>
